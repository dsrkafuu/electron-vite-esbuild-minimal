{
  "name": "electron-vite-esbuild-minimal",
  "description": "Clean minimal template to build an Electron app with Vite and ESBuild.",
  "version": "1.0.2",
  "author": "DSRKafuU <dsrkafuu@outlook.com> (https://dsrkafuu.su)",
  "license": "MIT",
  "scripts": {
    "post:package": "node -e \"try{require('./scripts/utils').writePackage()}catch{}\"",
    "post:builder": "electron-builder install-app-deps",
    "postinstall": "concurrently -m 1 npm:post:package npm:post:builder",
    "dev:app": "node ./scripts/dev.js",
    "dev": "cross-env NODE_ENV=development concurrently npm:dev:app",
    "build:app": "node ./scripts/build.js",
    "build:electron": "electron-builder build -mwl",
    "build": "cross-env NODE_ENV=production concurrently -m 1 npm:build:app npm:build:electron"
  },
  "dependencies": {
    "antd": "~4.16.13",
    "react": "~17.0.2",
    "react-dom": "~17.0.2",
    "tslib": "~2.3.1"
  },
  "devDependencies": {
    "@types/node": "~16.7.2",
    "@types/react": "~17.0.19",
    "@types/react-dom": "~17.0.9",
    "@typescript-eslint/eslint-plugin": "~4.29.3",
    "@typescript-eslint/parser": "~4.29.3",
    "@vitejs/plugin-react-refresh": "~1.3.6",
    "chalk": "~4.1.2",
    "concurrently": "~6.2.1",
    "cross-env": "~7.0.3",
    "electron": "~13.2.2",
    "electron-builder": "~22.11.7",
    "esbuild": "~0.12.22",
    "eslint": "~7.32.0",
    "eslint-plugin-react": "~7.24.0",
    "eslint-plugin-react-hooks": "~4.2.0",
    "fs-extra": "~10.0.0",
    "less": "~4.1.1",
    "prettier": "~2.3.2",
    "typescript": "~4.3.5",
    "vite": "~2.5.1"
  },
  "build": {
    "appId": "su.dsrkafuu.evem",
    "productName": "Electron Vite ESBuild Minimal",
    "copyright": "Copyright Â© 2020-present DSRKafuU",
    "directories": {
      "app": "./app",
      "output": "./build"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  }
}
